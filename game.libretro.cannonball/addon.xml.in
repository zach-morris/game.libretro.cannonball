<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.cannonball"
		name="Cannonball (Outrun Game Engine)"
		version="1.0"
		provider-name="Libretro">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.default" version="1.0.0"/>
		<import addon="game.controller.keyboard" version="1.0.0"/>
		<import addon="game.controller.mouse" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms></platforms>
		<extensions>game</extensions>
		<supports_vfs>false</supports_vfs>
		<supports_standalone>false</supports_standalone>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en_GB">Cannonball (Outrun Game Engine) v1.0</summary>
		<description lang="en_GB">Cannonball is an Enhanced OutRun Engine

Supported files: .game</description>
		<license>Copyright Chris White and the Cannonball team</license>
		<platform>@PLATFORM@</platform>
		<assets>
			<icon>resources/icon.png</icon>
			<screenshot>resources/screenshot-01.jpg</screenshot>
			<screenshot>resources/screenshot-02.jpg</screenshot>
			<screenshot>resources/screenshot-03.jpg</screenshot>
		</assets>
	</extension>
</addon>
